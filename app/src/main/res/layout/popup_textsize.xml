<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/btn_size_xs"
            android:layout_width="@dimen/colorPanelSize"
            android:layout_height="@dimen/colorPanelSize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_size_s"
            android:background="?attr/actionBarItemBackground"
            android:fontFamily="@font/arial"
            android:textSize="@dimen/lineSpacing"
            android:textColor="@color/colorDivider"
            android:text="9"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/btn_size_s"
            android:layout_width="@dimen/colorPanelSize"
            android:layout_height="@dimen/colorPanelSize"
            app:layout_constraintStart_toEndOf="@+id/btn_size_xs"
            app:layout_constraintEnd_toStartOf="@+id/btn_size_m"
            android:background="?attr/actionBarItemBackground"
            android:fontFamily="@font/arial"
            android:textSize="@dimen/lineSpacing"
            android:textColor="@color/colorDivider"
            android:text="10"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/btn_size_m"
            android:layout_width="@dimen/colorPanelSize"
            android:layout_height="@dimen/colorPanelSize"
            app:layout_constraintStart_toEndOf="@+id/btn_size_s"
            app:layout_constraintEnd_toStartOf="@+id/btn_size_l"
            android:background="?attr/actionBarItemBackground"
            android:fontFamily="@font/arial"
            android:textSize="@dimen/lineSpacing"
            android:textColor="@color/colorDivider"
            android:text="11"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/btn_size_l"
            android:layout_width="@dimen/colorPanelSize"
            android:layout_height="@dimen/colorPanelSize"
            app:layout_constraintStart_toEndOf="@+id/btn_size_m"
            app:layout_constraintEnd_toStartOf="@+id/btn_size_xl"
            android:background="?attr/actionBarItemBackground"
            android:fontFamily="@font/arial"
            android:textSize="@dimen/lineSpacing"
            android:textColor="@color/colorDivider"
            android:text="12"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/btn_size_xl"
            android:layout_width="@dimen/colorPanelSize"
            android:layout_height="@dimen/colorPanelSize"
            app:layout_constraintStart_toEndOf="@+id/btn_size_l"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="?attr/actionBarItemBackground"
            android:fontFamily="@font/arial"
            android:textSize="@dimen/lineSpacing"
            android:textColor="@color/colorDivider"
            android:text="13"
            android:layout_margin="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>